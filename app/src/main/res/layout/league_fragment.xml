<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_layout"
        android:paddingRight="@dimen/padding_layout">

        <com.bon.customview.textview.ExtTextView
            style="@style/StyleHeaderWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/leagues"
            app:textViewFontAssetName="@string/font_regular_display_heavy_italic" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnAdd"
            style="@style/FloatingActionButton"
            android:src="@drawable/bg_button_float_action" />
    </LinearLayout>

    <com.football.customizes.carousels.CarouselView
        android:id="@+id/cvCarouselView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>