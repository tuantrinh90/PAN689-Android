<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_null_gray_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_content"
    android:paddingLeft="@dimen/padding_layout"
    android:paddingRight="@dimen/padding_layout"
    android:paddingTop="@dimen/padding_content">

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/text_order"
        style="@style/StyleContentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:maxEms="2"
        android:padding="0dp"
        app:textViewFontAssetName="@string/font_display_bold"
        tools:text="#1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_avatar_default"
        android:padding="@dimen/avatar_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/avatar_normal"
            android:layout_height="@dimen/avatar_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/padding_layout">

        <com.bon.customview.textview.ExtTextView
            android:id="@+id/tvTeam"
            style="@style/StyleContentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:textViewFontAssetName="@string/font_display_bold"
            tools:text="@string/app_name" />

        <com.bon.customview.textview.ExtTextView
            android:id="@+id/tvOwner"
            style="@style/StyleDescriptionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="0dp"
            android:textColor="@color/color_green_button"
            tools:text="@string/app_name" />
    </LinearLayout>

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/text_lineup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green_button_border"
        android:paddingBottom="@dimen/padding_content_small"
        android:paddingLeft="@dimen/padding_layout"
        android:paddingRight="@dimen/padding_layout"
        android:paddingTop="@dimen/padding_content_small"
        android:text="@string/line_up"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_description"
        app:textViewFontAssetName="@string/font_display_black" />

</LinearLayout>