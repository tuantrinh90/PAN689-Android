<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.bon.customview.textview.ExtTextView
        style="@style/StyleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:text="@string/team_list_label" />

    <TableRow
        android:id="@+id/trEntrants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <com.bon.customview.textview.ExtTextView
            style="@style/StyleDescriptionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/padding_small"
            android:padding="0dp"
            android:text="@string/total"
            app:textViewFontAssetName="@string/font_display_bold" />

        <com.bon.customview.textview.ExtTextView
            android:id="@+id/tvNumber"
            style="@style/StyleTitleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/padding_small"
            android:padding="0dp"
            android:text="2"
            android:textColor="@color/color_content"
            app:textViewFontAssetName="@string/font_display_bold" />

        <com.bon.customview.textview.ExtTextView
            style="@style/StyleTitleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="0dp"
            android:text="/"
            android:textColor="@color/color_gray" />

        <com.bon.customview.textview.ExtTextView
            android:id="@+id/tvTotal"
            style="@style/StyleDescriptionGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/padding_small"
            android:padding="0dp"
            android:text="8"
            app:textViewFontAssetName="@string/font_display_bold" />
    </TableRow>

    <com.bon.customview.listview.ExtPagingListView
        android:id="@+id/rvRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_layout"
        android:layout_weight="1" />
</LinearLayout>