<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_layout"
    android:background="@drawable/bg_null_gray_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_layout"
    android:paddingRight="@dimen/padding_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_content"
        android:paddingRight="@dimen/padding_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvName"
                    style="@style/StyleDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/font_size_description"
                    app:textViewFontAssetName="@string/font_display_bold" />

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvClub"
                    style="@style/StyleDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_small"
                    android:padding="0dp"
                    android:text="@string/app_name"
                    android:textColor="@color/color_green_button"
                    android:textSize="@dimen/font_size_description" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_small">

                    <ImageView
                        android:id="@+id/ivPositionPrimary"
                        style="@style/IconTiny"
                        app:srcCompat="@drawable/ic_player_position_a" />

                    <ImageView
                        android:id="@+id/ivPositionSecond"
                        style="@style/IconTiny"
                        android:layout_marginLeft="@dimen/padding_content_small"
                        android:layout_marginStart="@dimen/padding_content_small"
                        app:srcCompat="@drawable/ic_player_position_a" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvOption1"
                    style="@style/StyleDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="100"
                    android:textSize="@dimen/font_size_description" />

                <ImageView
                    android:id="@+id/ivOption1"
                    style="@style/IconTiny"
                    android:layout_marginTop="@dimen/padding_small"
                    app:srcCompat="@drawable/ic_status_down"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvOption2"
                    style="@style/StyleDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="100"
                    android:textSize="@dimen/font_size_description" />

                <ImageView
                    android:id="@+id/ivOption2"
                    style="@style/IconTiny"
                    android:layout_marginTop="@dimen/padding_small"
                    app:srcCompat="@drawable/ic_status_up"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvOption3"
                    style="@style/StyleDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="100"
                    android:textSize="@dimen/font_size_description" />

                <ImageView
                    android:id="@+id/ivOption3"
                    style="@style/IconTiny"
                    android:layout_marginTop="@dimen/padding_small"
                    app:srcCompat="@drawable/ic_status_up"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivDelete"
                    style="@style/IconSmall"
                    android:layout_marginTop="@dimen/padding_small"
                    app:srcCompat="@drawable/ic_remove_circle_24_px"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivAdd"
                    style="@style/IconSmall"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@drawable/bg_circle_yellow"
                    android:padding="@dimen/padding_small"
                    app:srcCompat="@drawable/ic_add_white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/Line"
            android:layout_marginTop="@dimen/padding_content" />
    </LinearLayout>
</LinearLayout>