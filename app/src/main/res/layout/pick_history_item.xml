<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_content"
    android:paddingLeft="@dimen/padding_layout"
    android:paddingRight="@dimen/padding_layout"
    android:paddingTop="@dimen/padding_content">

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/tvRoundNumber"
        style="@style/StyleContentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_layout"
        android:layout_marginLeft="@dimen/padding_layout"
        android:layout_marginRight="@dimen/padding_layout"
        android:padding="0dp"
        android:textAllCaps="true"
        android:textColor="@color/color_blue"
        app:textViewFontAssetName="@string/font_display_bold"
        tools:text="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_layout"
        android:layout_marginRight="@dimen/padding_layout"
        android:background="@drawable/bg_stroke_gray"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_layout"
        android:paddingLeft="@dimen/padding_layout"
        android:paddingRight="@dimen/padding_layout"
        android:paddingTop="@dimen/padding_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/avatar_small"
                android:layout_height="@dimen/avatar_small"
                app:civ_border_color="@color/color_white_two_selector"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/size_border_bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvTeam"
                    style="@style/StyleContentContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    app:textViewFontAssetName="@string/font_display_bold"
                    tools:text="@string/app_name" />

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvClub"
                    style="@style/StyleDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="0dp"
                    android:textColor="@color/color_green_button"
                    tools:text="@string/app_name" />
            </LinearLayout>

        </LinearLayout>

        <com.bon.customview.textview.ExtTextView
            android:id="@+id/tvPlayerName"
            style="@style/StyleContentContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:textViewFontAssetName="@string/font_display_bold"
            tools:text="@string/app_name" />

    </LinearLayout>


</LinearLayout>