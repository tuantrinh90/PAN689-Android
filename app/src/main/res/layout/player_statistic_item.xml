<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_layout"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/shadow_layout_default_corner_radius"
    android:paddingLeft="@dimen/leagues_margin"
    android:paddingRight="@dimen/leagues_margin"
    android:paddingTop="@dimen/shadow_layout_default_corner_radius">

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/tvRound"
        style="@style/StyleDescriptionContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="0dp"
        android:text="@string/round" />

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/tvPoint"
        style="@style/StyleDescriptionContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="0dp"
        android:text="@string/point" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.bon.customview.textview.ExtTextView
            android:id="@+id/tvChange"
            style="@style/StyleDescriptionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="100" />

        <ImageView
            android:id="@+id/ivChange"
            style="@style/IconTiny"
            android:layout_marginLeft="@dimen/player_margin_small"
            android:layout_marginStart="@dimen/player_margin_small"
            android:background="@drawable/bg_circle_green"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_arrow_upward_white_small" />
    </LinearLayout>
</TableRow>