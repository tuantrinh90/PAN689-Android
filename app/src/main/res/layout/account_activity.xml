<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:orientation="vertical"
        android:padding="@dimen/account_padding_header">

        <com.bon.customview.textview.ExtTextView
            style="@style/StyleHeaderWhite"
            android:layout_marginTop="@dimen/padding_layout"
            android:text="@string/football_fantasy"
            app:textViewFontAssetName="@string/font_bold_italic" />

        <com.football.customizes.carousels.CarouselView
            android:id="@+id/cvCarousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_layout" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_layout"
        android:layout_weight="1" />
</LinearLayout>