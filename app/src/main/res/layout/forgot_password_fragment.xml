<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/padding_layout">

    <com.bon.customview.textview.ExtTextView
        style="@style/StyleTitle"
        android:text="@string/recover_password"
        android:textAllCaps="true"
        app:textViewFontAssetName="@string/font_regular_display_black_italic" />

    <com.bon.customview.textview.ExtTextView
        style="@style/StyleDescriptionGray"
        android:text="@string/forgot_description" />

    <com.bon.customview.edittext.ExtEditText
        android:id="@+id/etEmail"
        style="@style/StyleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/email_hint"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/color_hint_edit_text" />

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/tvSend"
        style="@style/StyleButton"
        android:layout_marginTop="@dimen/padding_layout"
        android:text="@string/send"
        app:textViewFontAssetName="@string/font_regular_display_black" />
</LinearLayout>