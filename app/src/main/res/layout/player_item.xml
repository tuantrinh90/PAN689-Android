<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_layout"
    android:background="@drawable/bg_white_radius_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_layout"
    android:paddingRight="@dimen/padding_layout">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/player_position_size"
            android:layout_height="@dimen/player_position_size"
            android:src="@drawable/ic_player_sample" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.bon.customview.textview.ExtTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_content"
                android:paddingRight="@dimen/padding_content"
                android:text="A"
                android:textColor="@color/color_black"
                app:textViewFontAssetName="@string/font_display_heavy" />

            <com.bon.customview.textview.ExtTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_content"
                android:paddingRight="@dimen/padding_content"
                android:text="A"
                android:textColor="@color/color_black"
                app:textViewFontAssetName="@string/font_display_heavy" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout"
        android:background="@color/color_gray" />

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/tvContent"
        style="@style/StyleDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="@dimen/padding_layout"
        android:textColor="@color/color_content"
        app:textViewFontAssetName="@string/font_display_heavy"
        tools:text="@string/app_name" />
</LinearLayout>