<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentScrim="@android:color/transparent"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_content"
            android:paddingRight="@dimen/padding_content"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="@string/app_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:id="@+id/season"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_layout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_layout"
                    android:paddingRight="@dimen/padding_layout">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/relativeLayout4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.bon.customview.textview.ExtTextView
                            android:id="@+id/tvTransferringPlayerLeft"
                            style="@style/StyleDescriptionWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/transferring_player_left"
                            android:textSize="@dimen/font_transferring_header"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textAllCaps="true"
                            app:textViewFontAssetName="@string/font_display_heavy" />

                        <ImageView
                            android:id="@+id/ivMoreTransferringPlayerLeft"
                            android:layout_width="@dimen/icon_tiny"
                            android:layout_height="@dimen/icon_tiny"
                            android:layout_marginLeft="@dimen/padding_content"
                            android:layout_marginRight="@dimen/padding_content"
                            app:layout_constraintStart_toEndOf="@+id/tvTransferringPlayerLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_info_outline_white" />

                        <com.bon.customview.textview.ExtTextView
                            android:id="@+id/tvTransferringPlayerLeftValue"
                            style="@style/StyleContentBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTransferringPlayerLeft"
                            app:textViewFontAssetName="@string/font_display_heavy" />

                    </android.support.constraint.ConstraintLayout>

                    <View
                        android:layout_width="@dimen/padding_small"
                        android:layout_height="0dp" />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.bon.customview.textview.ExtTextView
                            android:id="@+id/tvTransferringTimeLeft"
                            style="@style/StyleDescriptionWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/transferring_time_left"
                            android:textSize="@dimen/font_transferring_header"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textAllCaps="true"
                            app:textViewFontAssetName="@string/font_display_heavy" />

                        <ImageView
                            android:id="@+id/ivMoreTransferringTimeLeft"
                            android:layout_width="@dimen/icon_tiny"
                            android:layout_height="@dimen/icon_tiny"
                            android:layout_marginLeft="@dimen/padding_content"
                            android:layout_marginRight="@dimen/padding_content"
                            app:layout_constraintStart_toEndOf="@+id/tvTransferringTimeLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_info_outline_white" />

                        <com.football.customizes.textview.ExtTextViewCountdown
                            android:id="@+id/tvTransferringTimeLeftValue"
                            style="@style/StyleContentBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTransferringTimeLeft"
                            app:textViewFontAssetName="@string/font_display_heavy" />

                    </android.support.constraint.ConstraintLayout>

                    <View
                        android:layout_width="@dimen/padding_small"
                        android:layout_height="0dp" />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <com.bon.customview.textview.ExtTextView
                            android:id="@+id/tvBudget"
                            style="@style/StyleDescriptionWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/budget"
                            android:textSize="@dimen/font_transferring_header"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textAllCaps="true"
                            app:textViewFontAssetName="@string/font_display_heavy" />

                        <ImageView
                            android:id="@+id/ivMoreBudget"
                            android:layout_width="@dimen/icon_tiny"
                            android:layout_height="@dimen/icon_tiny"
                            android:layout_marginLeft="@dimen/padding_content"
                            android:layout_marginStart="@dimen/padding_content"
                            app:layout_constraintStart_toEndOf="@+id/tvBudget"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_info_outline_white" />

                        <com.bon.customview.textview.ExtTextView
                            android:id="@+id/tvBudgetValue"
                            style="@style/StyleContentBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvBudget"
                            app:textViewFontAssetName="@string/font_display_heavy" />

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

                <View
                    style="@style/Line"
                    android:layout_marginTop="@dimen/padding_content"
                    android:background="@color/color_white" />

                <LinearLayout
                    android:id="@+id/svSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_layout"
                    android:layout_marginTop="@dimen/padding_layout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_layout"
                    android:paddingRight="@dimen/padding_layout">

                    <com.bon.customview.textview.ExtTextView
                        style="@style/StyleDescriptionWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="@string/injured"
                        app:textAllCaps="true"
                        app:textViewFontAssetName="@string/font_display_heavy" />

                    <com.football.customizes.recyclerview.ExtRecyclerView
                        android:id="@+id/rv_injured"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_large"
                        android:layout_marginLeft="@dimen/padding_content"
                        android:layout_marginStart="@dimen/padding_content" />

                </LinearLayout>

                <View
                    style="@style/Line"
                    android:background="@color/color_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_layout"
                    android:layout_marginTop="@dimen/padding_layout"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_layout"
                    android:paddingRight="@dimen/padding_layout">

                    <LinearLayout
                        android:id="@+id/filter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_layout"
                        android:layout_marginStart="@dimen/padding_layout"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_component_radius"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_content"
                        android:paddingRight="@dimen/padding_content">

                        <ImageView
                            style="@style/IconTiny"
                            android:padding="@dimen/padding_small"
                            app:srcCompat="@drawable/ic_filter_list_blue_24_px" />

                        <com.bon.customview.textview.ExtTextView
                            style="@style/StyleDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter"
                            android:textColor="@color/color_blue"
                            app:textViewFontAssetName="@string/font_display_bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/padding_layout"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:id="@+id/display"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding_layout"
                        android:layout_marginRight="@dimen/padding_layout"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_component_radius"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_content"
                        android:paddingRight="@dimen/padding_content">

                        <ImageView
                            style="@style/IconTiny"
                            android:padding="@dimen/padding_small"
                            app:srcCompat="@drawable/ic_baseline_list_24_px" />

                        <com.bon.customview.textview.ExtTextView
                            style="@style/StyleDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/display"
                            android:textColor="@color/color_blue"
                            app:textViewFontAssetName="@string/font_display_bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_background_edit_text_focused"
            android:paddingBottom="@dimen/padding_content"
            android:paddingLeft="@dimen/padding_layout"
            android:paddingRight="@dimen/padding_layout"
            android:paddingTop="@dimen/padding_content"
            app:layout_collapseMode="pin">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_content"
                android:paddingRight="@dimen/padding_content">

                <com.bon.customview.textview.ExtTextView
                    style="@style/StyleDescriptionContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="0dp"
                    android:text="@string/name_club_position"
                    android:textSize="@dimen/font_size_description"
                    app:textViewFontAssetName="@string/font_display_bold" />

                <LinearLayout
                    android:id="@+id/option1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center">

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/tvOption1"
                        style="@style/StyleDescriptionContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text="@string/value"
                        android:textSize="@dimen/font_size_description"
                        app:textViewFontAssetName="@string/font_display_bold" />

                    <ImageView
                        android:id="@+id/ivSort1"
                        android:layout_width="@dimen/fab_margin"
                        android:layout_height="@dimen/fab_margin"
                        android:src="@drawable/ic_sort_none" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center">

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/tvOption2"
                        style="@style/StyleDescriptionContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text="@string/point"
                        android:textSize="@dimen/font_size_description"
                        app:textViewFontAssetName="@string/font_display_bold" />

                    <ImageView
                        android:id="@+id/ivSort2"
                        android:layout_width="@dimen/fab_margin"
                        android:layout_height="@dimen/fab_margin"
                        android:src="@drawable/ic_sort_none" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center">

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/tvOption3"
                        style="@style/StyleDescriptionContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text="@string/stat_1"
                        android:textSize="@dimen/font_size_description"
                        app:textViewFontAssetName="@string/font_display_bold" />

                    <ImageView
                        android:id="@+id/ivSort3"
                        android:layout_width="@dimen/fab_margin"
                        android:layout_height="@dimen/fab_margin"
                        android:src="@drawable/ic_sort_none" />
                </LinearLayout>
            </TableRow>
        </TableRow>
    </android.support.design.widget.AppBarLayout>

    <com.football.customizes.recyclerview.ExtRecyclerView
        android:id="@+id/rvPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>
