<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/component_radius" />
            <gradient android:endColor="@color/color_yellow_pressed" android:startColor="@color/color_yellow_start" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/component_radius" />
            <gradient android:endColor="@color/color_yellow_end" android:startColor="@color/color_yellow_start" />
        </shape>
    </item>
</selector>