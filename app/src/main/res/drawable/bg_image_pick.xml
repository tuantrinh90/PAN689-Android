<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="@dimen/avatar_normal" android:height="@dimen/avatar_normal" />
                    <solid android:color="@color/color_white" />
                    <stroke android:width="@dimen/avatar_border" android:color="@color/color_border_avatar_two" />
                </shape>
            </item>
            <item android:bottom="@dimen/avatar_border" android:left="@dimen/avatar_border" android:right="@dimen/avatar_border" android:top="@dimen/avatar_border">
                <shape android:shape="oval">
                    <size android:width="@dimen/avatar_normal" android:height="@dimen/avatar_normal" />
                    <gradient android:endColor="@color/color_yellow_end_selector" android:startColor="@color/color_yellow_start" />
                    <stroke android:width="@dimen/avatar_border" android:color="@color/color_border_avatar" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_photo_white" android:gravity="center" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="@dimen/avatar_normal" android:height="@dimen/avatar_normal" />
                    <solid android:color="@color/color_white" />
                    <stroke android:width="@dimen/avatar_border" android:color="@color/color_border_avatar_two" />
                </shape>
            </item>
            <item android:bottom="@dimen/avatar_border" android:left="@dimen/avatar_border" android:right="@dimen/avatar_border" android:top="@dimen/avatar_border">
                <shape android:shape="oval">
                    <size android:width="@dimen/avatar_normal" android:height="@dimen/avatar_normal" />
                    <gradient android:endColor="@color/color_yellow_end" android:startColor="@color/color_yellow_start" />
                    <stroke android:width="@dimen/avatar_border" android:color="@color/color_border_avatar" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_photo_white" android:gravity="center" />
        </layer-list>
    </item>
</selector>