<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_view" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
            <size android:width="@dimen/check_box_size" android:height="@dimen/check_box_size" />
            <solid android:color="@color/color_blue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_view" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
            <size android:width="@dimen/check_box_size" android:height="@dimen/check_box_size" />
            <solid android:color="@color/color_white" />
        </shape>
    </item>
</selector>