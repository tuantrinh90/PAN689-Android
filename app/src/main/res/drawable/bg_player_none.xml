<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/avatar_normal"
                android:height="@dimen/avatar_normal" />
            <solid android:color="@color/color_white" />
            <stroke
                android:width="@dimen/player_border"
                android:color="@color/color_gray" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:bottom="@dimen/padding_status_bar"
        android:drawable="@drawable/ic_add_gray"
        android:left="@dimen/padding_status_bar"
        android:right="@dimen/padding_status_bar"
        android:top="@dimen/padding_status_bar" />
</layer-list>