<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/component_radius" />
            <solid android:color="@color/color_gray_light" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <corners android:radius="@dimen/component_radius" />
            <solid android:color="@color/color_gray_light" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_red" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/component_radius" />
            <solid android:color="@color/color_white" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
        </shape>
    </item>
</selector>