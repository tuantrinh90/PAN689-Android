<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <corners android:radius="@dimen/radius_view" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
            <gradient android:endColor="@color/color_yellow_end" android:startColor="@color/color_yellow_start" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/radius_view" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
            <solid android:color="@color/color_white" />
        </shape>
    </item>
</selector>