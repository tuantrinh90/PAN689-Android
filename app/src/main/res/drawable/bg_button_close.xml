<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="@dimen/float_action_button_size" android:height="@dimen/float_action_button_size" />
                    <solid android:color="@color/color_white" />
                </shape>
            </item>
            <item android:bottom="@dimen/avatar_border" android:left="@dimen/avatar_border" android:right="@dimen/avatar_border" android:top="@dimen/avatar_border">
                <shape android:shape="oval">
                    <size android:width="@dimen/float_action_button_size" android:height="@dimen/float_action_button_size" />
                    <solid android:color="@color/color_red_selector" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_close_white" android:gravity="center" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="@dimen/float_action_button_size" android:height="@dimen/float_action_button_size" />
                    <solid android:color="@color/color_white" />
                </shape>
            </item>
            <item android:bottom="@dimen/avatar_border" android:left="@dimen/avatar_border" android:right="@dimen/avatar_border" android:top="@dimen/avatar_border">
                <shape android:shape="oval">
                    <size android:width="@dimen/float_action_button_size" android:height="@dimen/float_action_button_size" />
                    <solid android:color="@color/color_red" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_close_white" android:gravity="center" />
        </layer-list>
    </item>
</selector>

