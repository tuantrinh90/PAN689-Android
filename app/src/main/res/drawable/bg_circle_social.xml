<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="@dimen/icon_large" android:height="@dimen/icon_large" />
            <solid android:color="@color/color_gray_selector" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="@dimen/icon_large" android:height="@dimen/icon_large" />
            <solid android:color="@color/color_white" />
            <stroke android:width="@dimen/border_component" android:color="@color/color_border" />
        </shape>
    </item>
</selector>