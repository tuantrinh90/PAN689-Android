<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/avatar_normal"
                android:height="@dimen/avatar_normal" />
            <solid android:color="@color/color_red" />
            <stroke
                android:width="@dimen/avatar_border"
                android:color="@color/color_red" />
        </shape>
    </item>
    <item
        android:left="@dimen/padding_status_bar"
        android:right="@dimen/padding_status_bar">
        <bitmap
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_remove_small" />
    </item>
</layer-list>