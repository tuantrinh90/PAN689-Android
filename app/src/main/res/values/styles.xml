<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="windowContentOverlay">@null</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--font size-->
    <style name="StyleHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_header</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleHeaderWhite" parent="StyleHeader">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="StyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleTitleWhite" parent="StyleTitle">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="StyleTitleBlue" parent="StyleTitle">
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="StyleContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleContentWhite" parent="StyleContent">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="StyleContentBlue" parent="StyleContent">
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:paddingLeft">@dimen/component_radius</item>
        <item name="android:paddingRight">@dimen/component_radius</item>
        <item name="android:paddingTop">@dimen/padding_content</item>
        <item name="android:paddingBottom">@dimen/padding_content</item>
    </style>

    <style name="StyleMenu" parent="StyleContent">
        <item name="android:textSize">@dimen/font_size_menu</item>
    </style>

    <style name="StyleMenuBlue" parent="StyleMenu">
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="StyleMenuWhite" parent="StyleMenu">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="StyleDescription" parent="StyleContent">
        <item name="android:textSize">@dimen/font_size_description</item>
    </style>

    <style name="StyleDescriptionRed" parent="StyleDescription">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="StyleDescriptionGray" parent="StyleDescription">
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="StyleDescriptionAvatar" parent="StyleDescription">
        <item name="android:textColor">@color/color_border_avatar</item>
    </style>

    <style name="StyleFooter" parent="StyleDescription">
        <item name="android:textSize">@dimen/font_footer</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:padding">@dimen/padding_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_yellow</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleFooterItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="iconTiny">
        <item name="android:layout_width">@dimen/icon_tiny</item>
        <item name="android:layout_height">@dimen/icon_tiny</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="iconSmall">
        <item name="android:layout_width">@dimen/icon_small</item>
        <item name="android:layout_height">@dimen/icon_small</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="iconMedium">
        <item name="android:layout_width">@dimen/icon_medium</item>
        <item name="android:layout_height">@dimen/icon_medium</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="iconLarge">
        <item name="android:layout_width">@dimen/icon_large</item>
        <item name="android:layout_height">@dimen/icon_large</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
